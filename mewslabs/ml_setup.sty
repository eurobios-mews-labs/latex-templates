\newcommand\mfstyle{\footnotesize\sffamily\bfseries\color{mmain}}

%** new plain style (only page number)

\newboolean{b_firstlogo}
\setboolean{b_firstlogo}{false}
\newcommand{\firstlogo}[1]{
  \setboolean{b_firstlogo}{true}
  \newcommand{\Firstlogo}{#1}
}

\newboolean{b_secondlogo}
\setboolean{b_secondlogo}{false}
\newcommand{\secondlogo}[1]{
  \setboolean{b_secondlogo}{true}
  \newcommand{\Secondlogo}{#1}
}



\fancypagestyle{plain}{
  \fancyhf{}
  \fancyhead[L]{\ifthenelse{\boolean{b_firstlogo}}{\includegraphics[height=3em]{\Firstlogo}}{}}
  \fancyhead[R]{\ifthenelse{\boolean{b_secondlogo}}{\includegraphics[height=3em]{\Secondlogo}}{}}
  \fancyfoot[R]{\mfstyle \thepage/\pageref*{LastPage}}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}

