%%% Booleans and options

\newboolean{b_font_kp}
\setboolean{b_font_kp}{false}
\DeclareOption{kpfonts}{\setboolean{b_font_kp}{true}}

\newboolean{b_font_lmodern}
\setboolean{b_font_lmodern}{false}
\DeclareOption{lmodern}{\setboolean{b_font_lmodern}{true}}

\newboolean{b_font_libertine}
\setboolean{b_font_libertine}{false}
\DeclareOption{libertine}{\setboolean{b_font_libertine}{true}}

\newboolean{b_font_newtx}
\setboolean{b_font_newtx}{false}
\DeclareOption{newtx}{\setboolean{b_font_newtx}{true}}

\newboolean{b_draft}
\setboolean{b_draft}{false}
\DeclareOption{draft}{\setboolean{b_draft}{true}}

\ProcessOptions\relax

%** default value
\ifthenelse{\boolean{b_font_kp}\OR\boolean{b_font_lmodern}\OR\boolean{b_font_libertine}\OR\boolean{b_font_newtx}}{%
}{%
  \setboolean{b_font_lmodern}{true}
}
